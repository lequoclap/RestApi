<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="atinyshop.hacorp.laplq.restapi" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.UserInfoActivity"
            android:label="@string/title_activity_user_info" />
        <activity
            android:name=".NavigationDrawerActivity"
            android:label="@string/title_activity_track_list" />
        <activity
            android:name=".activities.BaseActivity"
            android:label="@string/title_activity_base" />
        <activity
            android:name=".activities.TrackListActivity"
            android:label="@string/title_activity_navigation_drawer" />
        <activity
            android:name=".MyNavigationDrawer"
            android:theme="@style/MyNavigationDrawerTheme" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
